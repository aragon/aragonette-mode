// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Stage {
  id             String    @id
  name           String
  status         String
  createdAt      String? // TODO: DateTime?
  startTimestamp String? // TODO: DateTime?
  endTimestamp   String? // TODO: DateTime?
  creator        String[]
  resources      String[]
  proposal       Proposal  @relation(fields: [proposalId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  proposalId     String
  voting         String?
}

model Proposal {
  id                 String   @id
  title              String
  description        String
  body               String?
  transparencyReport String?
  status             String
  createdAt          String // TODO: DateTime?
  isEmergency        Boolean
  currentStage       String
  creators           String[]
  resources          String[]
  type               String
  actions            String[]
  Stages             Stage[]
}
