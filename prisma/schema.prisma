// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins", "fullTextSearch"]
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

enum StageType {
  DRAFT
  TRANSPARENCY_REPORT
  COUNCIL_APPROVAL
  COMMUNITY_VOTING
  COUNCIL_CONFIRMATION
}

enum ProposalStatus {
  ACTIVE
  PENDING
  ACCEPTED
  EXECUTED
  REJECTED
  EXPIRED
}

enum StageStatus {
  ACTIVE
  PENDING
  APPROVED
  REJECTED
}

model Stage {
  id             String    @id
  type           StageType
  status         StageStatus
  statusMessage  String?
  createdAt      String?
  startTimestamp String?
  endTimestamp   String?
  creator        String[]
  resources      String[]
  proposal       Proposal  @relation(fields: [proposalId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  proposalId     String
  voting         String?
}

model Proposal {
  id                 String   @id
  title              String
  description        String
  body               String?
  transparencyReport String?
  status             ProposalStatus
  statusMessage      String?
  createdAt          String?
  isEmergency        Boolean
  currentStage       String
  creators           String[]
  resources          String[]
  type               String
  actions            String[]
  includedMips       String[]
  parentMip          String?
  Stages             Stage[]
}
